<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>portfolio</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>index.do</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.jsp</welcome-file>
    <welcome-file>default.htm</welcome-file>
  </welcome-file-list>
  <servlet>
    <servlet-name>Registration</servlet-name>
    <servlet-class>port.Registration</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Registration</servlet-name>
    <url-pattern>/Registration.do</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>Login</servlet-name>
    <servlet-class>port.Login</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Login</servlet-name>
    <url-pattern>/Login.do</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>Admin_Configuration_Insert</servlet-name>
    <servlet-class>port.config.Admin_Configuration_Insert</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Admin_Configuration_Insert</servlet-name>
    <url-pattern>/Admin_Configuration_Insert.do</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>Admin_Notice_Registration</servlet-name>
    <servlet-class>port.notice.Admin_Notice_Registration</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Admin_Notice_Registration</servlet-name>
    <url-pattern>/Admin_Notice_Registration.do</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>Coupon_Insert</servlet-name>
    <servlet-class>port.manage.Coupon_Insert</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Coupon_Insert</servlet-name>
    <url-pattern>/Coupon_Insert.do</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>Category_Insert</servlet-name>
    <servlet-class>port.product.Category_Insert</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Category_Insert</servlet-name>
    <url-pattern>/Category_Insert.do</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>Product_Insert</servlet-name>
    <servlet-class>port.product.Product_Insert</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Product_Insert</servlet-name>
    <url-pattern>/Product_Insert.do</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>Information_Revise</servlet-name>
    <servlet-class>port.Information_Revise</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Information_Revise</servlet-name>
    <url-pattern>/Information_Revise.do</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>Notice_Revise</servlet-name>
    <servlet-class>port.notice.Notice_Revise</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Notice_Revise</servlet-name>
    <url-pattern>/Notice_Revise.do</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>patcher</servlet-name>
    <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
    <init-param>
      <param-name>contextConfigLocation</param-name>
      <param-value>
			/WEB-INF/xml/mapping.xml
			/WEB-INF/xml/connect.xml
			/WEB-INF/xml/security-context.xml
			</param-value>
    </init-param>
    <load-on-startup>1</load-on-startup>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>patcher</servlet-name>
    <url-pattern>/</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>*.js</url-pattern>
        <url-pattern>*.css</url-pattern>
        <url-pattern>*.jpg</url-pattern>
        <url-pattern>*.gif</url-pattern>
        <url-pattern>*.png</url-pattern>
        <url-pattern>*.ico</url-pattern>
        <url-pattern>*.swf</url-pattern>
        <url-pattern>*.svg</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>jsp</servlet-name>
        <url-pattern>*.jsp</url-pattern>
        <url-pattern>*.jspx</url-pattern>
        <url-pattern>*.html</url-pattern>
    </servlet-mapping>
  
  
  
  <filter>
    <filter-name>encodingFilter</filter-name>
    <filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
    <init-param>
      <param-name>encoding</param-name>
      <param-value>UTF-8</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>encodingFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
</web-app>